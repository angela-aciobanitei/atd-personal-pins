<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pickerDialogButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="exoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="exoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle_filled</item>
    </style>

    <style name="exoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_circle_filled</item>
    </style>

</resources>
