<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="pin" type="com.ang.acb.personalpins.data.entity.Pin" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/pin_details_video_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="W,2:2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toggleVisibility="@{pin.videoUri != null}"/>

        <ImageView
            android:id="@+id/pin_details_video_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/video_play_button"
            android:src="@drawable/ic_play_circle_outline"
            app:layout_constraintStart_toStartOf="@id/pin_details_video_view"
            app:layout_constraintEnd_toEndOf="@id/pin_details_video_view"
            app:layout_constraintTop_toTopOf="@id/pin_details_video_view"
            app:layout_constraintBottom_toBottomOf="@id/pin_details_video_view"
            app:toggleVisibility="@{pin.videoUri != null}"/>

        <ImageView
            android:id="@+id/pin_details_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="W,2:2"
            android:contentDescription="@string/pin_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toggleVisibility="@{pin.photoUri != null}"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="pin_details_video_view,pin_details_photo" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/pin_details_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            app:toggleVisibility="@{pin != null}">

            <include
                android:id="@+id/pin_partial_info"
                layout="@layout/pin_details_partial_info"
                app:pin="@{pin}"/>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
