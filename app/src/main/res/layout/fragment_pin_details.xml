<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ang.acb.personalpins.data.entity.Pin" />

        <variable name="pin" type="Pin" />
        <variable name="tagsCount" type="int"/>
        <variable name="commentsCount" type="int"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/pin_details_video_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier1"
            app:toggleVisibility="@{pin.videoUri != null}"/>

        <ImageView
            android:id="@+id/pin_details_video_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pin_edit_video_play_button"
            android:src="@drawable/ic_play_circle_outline"
            app:layout_constraintStart_toStartOf="@id/pin_details_video_view"
            app:layout_constraintEnd_toEndOf="@id/pin_details_video_view"
            app:layout_constraintTop_toTopOf="@id/pin_details_video_view"
            app:layout_constraintBottom_toBottomOf="@id/pin_details_video_view"
            app:toggleVisibility="@{pin.videoUri != null}"/>

        <ImageView
            android:id="@+id/pin_details_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/pin_details_photo"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/barrier1"
            app:toggleVisibility="@{pin.photoUri != null}"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="pin_details_video_view,pin_details_photo" />

        <TextView
            android:id="@+id/pin_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{pin.title}"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier1"
            app:toggleVisibility="@{pin.title != null}"
            tools:text="@tools:sample/lorem"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/pin_details_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"
            android:clipToPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pin_details_title"
            app:toggleVisibility="@{pin != null}">

            <include
                android:id="@+id/pin_partial_info"
                layout="@layout/pin_details_partial_info"
                app:pin="@{pin}"
                app:tagsCount="@{tagsCount}"
                app:commentsCount="@{commentsCount}"/>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
