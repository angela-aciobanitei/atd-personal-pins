<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="boardPinsCount" type="int"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin">

            <Button
                android:id="@+id/add_pins_button"
                android:text="@string/add_pins"
                style="@style/createButtonStyle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_board_pins"
                app:toggleVisibility="@{boardPinsCount!= 0}"
                style="@style/listStyle"/>

            <TextView
                android:id="@+id/board_details_empty_state"
                app:toggleVisibility="@{boardPinsCount == 0}"
                tools:text="@string/no_pins_added"
                style="@style/emptyStateTextStyle"  />

        </LinearLayout>
    </ScrollView>
</layout>