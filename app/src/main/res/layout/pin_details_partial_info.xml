<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ang.acb.personalpins.data.entity.Pin" />

        <variable name="pin" type="Pin" />
        <variable name="tagsCount" type="int"/>
        <variable name="commentsCount" type="int"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin">

        <TextView
            android:id="@+id/pin_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{pin.title.toUpperCase()}"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:toggleVisibility="@{pin.title != null}"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/pin_details_tags_label"
            android:text="@string/pin_tags_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pin_details_title"
            style="@style/pinDetailsLabelStyle"/>

        <Button
            android:id="@+id/new_tag_button"
            android:text="@string/new_tag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pin_details_title"
            style="@style/createButtonStyle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags"
            app:toggleVisibility="@{tagsCount != 0}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_tag_button"
            style="@style/listStyle" />

        <TextView
            android:id="@+id/pin_details_comments_label"
            android:text="@string/pin_comments_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_tags"
            style="@style/pinDetailsLabelStyle" />

        <Button
            android:id="@+id/new_comment_button"
            android:text="@string/new_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_tags"
            style="@style/createButtonStyle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comments"
            app:toggleVisibility="@{commentsCount != 0}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_comment_button"
            style="@style/listStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>